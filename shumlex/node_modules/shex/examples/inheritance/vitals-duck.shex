PREFIX : <http://hl7.org/ns/fhir>
PREFIX fhir: <http://hl7.org/ns/fhir#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

<#Observation> {
  fhir:code .? ;
  fhir:component {
    fhir:code . ;
    fhir:value .
  }*
}


# -- super-classes --
<#Vital> -<#Observation> .


<#PostureVital> -<#Vital> &<#Posture>


<#ReclinedVital> -<#PostureVital> &<#Reclined>




# -- BP --
<#BP> -<#Observation> AND EXTRA fhir:component {
  fhir:component { fhir:code ["systolic"] } ;
  fhir:component { fhir:code ["diastolic"] }
}



<#PostureBP> -<#Observation> &<#BP> &<#Posture> { }




<#ReclinedBP> -<#Observation> &<#BP> &<#Reclined> { }





# -- Pulse --
<#Pulse> {

    fhir:code ["pulse"]
}

<#PosturePulse> -<#Observation> &<#Pulse> &<#Posture> { }




<#ReclinedPulse> -<#Observation> &<#Pulse> &<#Reclined> { }





# -- postures --
<#Posture> -<#Observation> EXTRA fhir:component {

  fhir:component {
    fhir:code ["posture"]
  }
}

<#Reclined> -<#Posture> EXTRA fhir:component {

  fhir:component {
    fhir:code ["posture"] ;
    fhir:value ["reclined"]
  }
}

